# Prompt Manager API 环境配置模板
# 复制此文件为 .env 并填入实际值

# === 应用基础配置 ===
# 应用环境：development, production, testing
APP_ENV=development
# 应用密钥，用于session和JWT签名（生产环境必须修改）
SECRET_KEY=your-super-secret-key-change-in-production
# 应用调试模式
DEBUG=true
# 应用端口
PORT=5000
# 应用主机
HOST=0.0.0.0

# === 数据库配置 ===
# 数据库类型：sqlite, mysql, postgresql
DATABASE_TYPE=mysql
# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=prompt_manager
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=prompt_manager_db
# SQLite数据库文件路径（仅在DATABASE_TYPE=sqlite时使用）
SQLITE_PATH=database/app.db

# === Redis配置（可选，用于缓存和会话存储） ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === AI模型配置 ===
# OpenAI配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
# Claude配置
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_API_BASE=https://api.anthropic.com
CLAUDE_MODEL=claude-3-opus-20240229

# === 日志配置 ===
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE_PATH=logs/prompt_manager.log
# 日志文件最大大小（MB）
LOG_MAX_SIZE=10
# 日志文件保留数量
LOG_BACKUP_COUNT=5

# === 安全配置 ===
# JWT过期时间（小时）
JWT_EXPIRATION_HOURS=24
# 密码最小长度
PASSWORD_MIN_LENGTH=8
# 登录失败最大次数
MAX_LOGIN_ATTEMPTS=5
# 账户锁定时间（分钟）
ACCOUNT_LOCKOUT_MINUTES=30

# === 文件上传配置 ===
# 上传文件最大大小（MB）
MAX_UPLOAD_SIZE=10
# 允许的文件类型
ALLOWED_EXTENSIONS=txt,md,json
# 上传文件存储路径
UPLOAD_PATH=uploads

# === 邮件配置（可选，用于通知） ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# === 第三方服务配置 ===
# 是否启用用户注册
ENABLE_REGISTRATION=true
# 是否需要邮箱验证
REQUIRE_EMAIL_VERIFICATION=false
# 默认用户角色
DEFAULT_USER_ROLE=user

# === 性能配置 ===
# 数据库连接池大小
DB_POOL_SIZE=10
# 数据库连接池最大溢出
DB_MAX_OVERFLOW=20
# 数据库连接超时（秒）
DB_POOL_TIMEOUT=30
# 数据库连接回收时间（秒）
DB_POOL_RECYCLE=3600

